<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">




    <ImageView
        android:id="@+id/imageView_upload"
        android:layout_width="290dp"
        android:layout_height="337dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/mandatory_update" />


    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/update"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="更新内容"
        android:textColor="@color/home_text2"
        android:textSize="16dp" />


    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_upload"
        android:layout_alignLeft="@+id/imageView_upload"
        android:layout_alignRight="@+id/imageView_upload"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_org_empty_cir"
        android:padding="5dp"
        android:text="立即更新"
        android:textColor="#f86442"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/close1" />




</RelativeLayout>