<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qian_bg"
    android:orientation="vertical">

    <include layout="@layout/main_top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="@string/suggest_1"
        android:textColor="@color/home_text"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/more_suggest_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/white_corner"
        android:gravity="top"
        android:hint="@string/suggest_3"
        android:minLines="5"
        android:padding="15dp"
        android:textColorHint="@color/hint_color"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/more_suggest_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-30dp"
        android:text="0/150"
        android:textColor="@color/home_text2"
        android:textSize="13dp" />

    <Button
        android:id="@+id/more_suggest_commit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_org_grauly"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="18dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="如有疑问，可直接拨打客服热线：400-000-9810"
        android:textColor="@color/hint_color"
        android:textSize="14dp" />



</LinearLayout>