<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_line">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7/7"
        android:textColor="@color/home_text2"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.假设有两种不同的投资：投资A预期获得5%的收益，有可能承担非常小的损失，投资B预期获得20%的收益，但有可能面临25%甚至更高的损失，你将您的投资分配为："
            android:textColor="@color/home_text2"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ceping_default"
                android:layout_margin="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_text2"
                android:text="全部投资于A "/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/progress_line" />
        <LinearLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_select2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ceping_default"
                android:layout_margin="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_text2"
                android:text="大部分投资A，少部分投资B"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/progress_line" />
        <LinearLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_select3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ceping_default"
                android:layout_margin="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_text2"
                android:text="大部分投资B，少部分投资A "/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/progress_line" />
        <LinearLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_select4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ceping_default"
                android:layout_margin="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/home_text2"
                android:text="全部投资B   "/>
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_last"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text2"
            android:text=" 返回上一题"/>
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_last"
            android:layout_centerInParent="true"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_org_grauly"
            android:textColor="@color/white"
            android:text="提交"/>




    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="市场有风险,投资需谨慎"
        />
</RelativeLayout>