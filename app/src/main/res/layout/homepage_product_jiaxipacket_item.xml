<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qian_bg"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="9"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/jiaxi_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/icon"
            android:layout_toStartOf="@+id/icon"
            android:background="@drawable/jiaxi_image"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_jiaxi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="1"
                    android:text="新手红包"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jiaxi_apr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="20"
                    android:textColor="#ff6e19"
                    android:textSize="36dp" />

                <TextView
                    android:id="@+id/redpacket_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_jiaxi_apr"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/tv_jiaxi_apr"
                    android:text="%"
                    android:textColor="#ff6e19"
                    android:textSize="15dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:paddingLeft="9dp">

                <TextView
                    android:id="@+id/tv_jiaxi_moneyLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="投资金额满元可用"
                    android:textColor="@color/home_text"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tv_jiaxi_timeLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="期限大于天使用"
                    android:textColor="@color/home_text"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tv_jiaxi_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="加息时间"
                    android:textColor="@color/home_text"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_jiaxi_validDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="到期时间"
                    android:textColor="@color/home_text"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>
            <!-- 打钩的按钮-->
        <RelativeLayout
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/redpacket_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/selected_btn_def"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>