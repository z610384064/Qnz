<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qian_bg"
    android:orientation="vertical">

    <include layout="@layout/main_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_color"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="收 货 人"
                android:textColor="@color/home_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/address_name"
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/address_phone"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/address_phone"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint="请输入收货姓名"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/address_name"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/line3"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="收货人手机"
                android:textColor="@color/home_text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/address_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/line3"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:hint="请输入联系电话"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/address_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/line2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="所在地区"
                android:textColor="@color/home_text"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/select_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/line1"
                android:layout_alignLeft="@+id/address_phone"
                android:layout_alignStart="@+id/address_phone"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/text"
                android:gravity="center_vertical"
                android:text="请选择"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_above="@+id/relativeLayout2"
                android:layout_alignEnd="@+id/line2"
                android:layout_alignRight="@+id/line2">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_arrow_light_grey"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/imageView12"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:background="@drawable/white">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="详细地址 "
                    android:textColor="@color/home_text"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/address_more"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="top"
                    android:hint="请输入详细地址，街道门牌号等信息"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14dp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:text="@string/add_address"
            android:textColor="@color/hint_color" />
    </LinearLayout>

</LinearLayout>