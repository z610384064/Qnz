<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_line"
    android:orientation="vertical">

    <include layout="@layout/main_top" />

    <!-- 获取验证码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/forget_card_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:hint="请输入身份证后8位"
                android:maxLength="8"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/forget_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="你绑定的手机号码:"
            android:textColor="@color/huise"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/forget_verify_lin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/forget_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/forget_verify_btn"
                    android:layout_toStartOf="@+id/forget_verify_btn"
                    android:background="@color/white"
                    android:hint="@string/reg_text_verify"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/forget_verify_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/forget_verify"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/home_text2"
                    android:layout_alignParentRight="true"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/reg_btn_submit" />
            </RelativeLayout>

            <!--<Button
                android:id="@+id/forget_verify_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/register_btn_selected"
                android:padding="10.0dp"
                android:text="@string/reg_btn_submit"
                android:textColor="@color/white" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_jypassword_lin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/forget_jypassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:hint="请设置8~20位新的交易密码"
                android:maxLength="20"
                android:minEms="8"
                android:password="true"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp" />
        </LinearLayout>

        <Button
            android:id="@+id/forget_secces_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_org_grauly"
            android:text="确 定"
            android:textSize="18dp"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>