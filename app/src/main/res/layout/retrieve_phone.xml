<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qian_bg"
    android:orientation="vertical">

    <include layout="@layout/main_top"></include>
    <LinearLayout

        android:id="@+id/retrieve_phone_linear_verify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@null"
            android:singleLine="true"
            android:text="已发送短信到手机号"
            android:textColor="@color/home_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/retrieve_phone_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@null"
            android:singleLine="true"
            android:text="请注意查收"
            android:textColor="@color/home_text"
            android:textSize="14dp" />

        <!--<TextView-->
            <!--android:id="@+id/retrieve_phone_mobile"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="15dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:background="@null"-->
            <!--android:singleLine="true"-->
            <!--android:text="您绑定的手机号码："-->
            <!--android:textColor="@color/home_text"-->
            <!--android:textSize="14dp" />-->


        <RelativeLayout
            android:id="@+id/reg_verify_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_cornera"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/retrieve_phone_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/retrieve_phone_verify_btn"
                android:background="@color/white"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/retrieve_phone_verify_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="@string/reg_btn_submit"
                android:textColor="@color/home_text2"
                android:textSize="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/retrieve_phone_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white"
            android:orientation="vertical">

            <!-- 请输入登录密码-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/retrieve_phone_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/reg_light_icon1"
                    android:layout_toStartOf="@+id/reg_light_icon1"
                    android:background="@color/white"
                    android:hint="@string/reg_text_password"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textPhonetic"
                    android:longClickable="false"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14dp" />


                <ImageButton
                    android:id="@+id/reg_light_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"

                    android:background="@drawable/eye_default_btn1"
                    />
            </RelativeLayout>





        </LinearLayout>

        <Button
            android:id="@+id/retrieve_phone_secces_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_org_grauly"
            android:text="立即找回"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>




</LinearLayout>