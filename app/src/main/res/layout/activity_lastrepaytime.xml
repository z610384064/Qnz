<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_line"
    android:orientation="vertical">

    <include
        android:id="@+id/incl"
        layout="@layout/main_top" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="支持提前还款，还款还有额外奖励"
        android:textColor="@color/home_text"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/circle_cornera">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/last_repay_time"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="30dp"
            android:text="本项目提前还款"
            android:textColor="@color/home_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="15dp"
            android:text="额外奖励1天的投资收益"
            android:textColor="#fd7d1d"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="30dp"
            android:text="奖励在还款日发送到投资人的账户余额"
            android:textColor="@color/home_text"
            android:textSize="13dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:text="提前还款:"
        android:textColor="#fd7d1d"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:text="@string/lastRepayTime"
        android:textColor="@color/home_text"
        android:textSize="13dp" />

</LinearLayout>
