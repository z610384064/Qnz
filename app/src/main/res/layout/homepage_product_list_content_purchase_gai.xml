<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_top" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/progress_line"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/product_linearlayout_gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/progress_line"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone"
           >

            <TextView
                android:id="@+id/product_money_intro_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可申购金额   "
                android:textColor="#595959"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/product_money_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 ~ 1000"
                android:textColor="#FA6812"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#595959"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/product_money_toast_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  (需一次性申购完)"
                android:textColor="#FA6812"
                android:textSize="15dp" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_cornera"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="剩余可投"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />

                    <!--    android:id="@+id/purchase_money" -->
                    <TextView
                        android:id="@+id/tv_sskt_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="0"
                        android:textColor="@color/app_color"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="元"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />
                </LinearLayout>
            <!--   android:id="@+id/my_money_bank_used_money"-->
                <TextView
                    android:id="@+id/look_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/left_chakan_jiantou"
                    android:text="查看银行限额"
                    android:textColor="@color/home_text"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/left_chakan_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_arrow_light_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:id="@+id/text_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:text="您要申购"
                    android:textColor="@color/home_text2"
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@null"
                    android:text="元"
                    android:textColor="@color/home_text"
                    android:textSize="15dp" />

                <!--   android:id="@+id/purchase_buy_money" -->
                <EditText
                    android:id="@+id/et_buy_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/textview"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="0元起投"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_color"
                    android:textSize="14dp" />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/progress_line"
                android:paddingBottom="15dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:id="@+id/ll_xinshou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/home_text2"
                    android:text="限额"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_color"
                    android:text="20000"/>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预计收益"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />

                    <!--    android:id="@+id/estimated_return" -->
                    <TextView
                        android:id="@+id/tv_yjsy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/app_color"
                        android:textSize="15dp" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="元"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_cornera"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/redpacket_btn"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        android:id="@+id/purchase_redpacket_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:text="使用优惠"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />

                    <!--  android:id="@+id/purchase_redpacket_much"  -->

                    <ImageView
                        android:id="@+id/purchase_redpacket_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_arrow_light_grey" />

                    <TextView
                        android:id="@+id/tv_youhui"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="暂无可用优惠"
                        android:textColor="@color/home_text"
                        android:textSize="14dp"
                        android:layout_alignTop="@+id/purchase_redpacket_title"
                        android:layout_toLeftOf="@+id/purchase_redpacket_right"
                        android:layout_toStartOf="@+id/purchase_redpacket_right" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/my_touzi_zhunbei_btn"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <!--my_money_touzi_zhunbeijin_all -->
                    <TextView
                        android:id="@+id/tv_ye_describe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:text="余额（0）"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />

                    <!-- my_money_touzi_zhunbeijin_yong -->
                    <TextView
                        android:id="@+id/tv_ye_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/left_zhunbeijin_jiantou"
                        android:background="@null"
                        android:text="0.00元"
                        android:textColor="@color/home_text"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/left_zhunbeijin_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_arrow_light_grey"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:id="@+id/my_bank_btn"
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        android:id="@+id/tv_mybank_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:background="@null"
                        android:text="支付银行卡"
                        android:textColor="@color/home_text2"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tv_bankmoney_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/my_money_bank_right_arrow"
                        android:text="未选择"
                        android:textColor="@color/home_text"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/my_money_bank_right_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_arrow_light_grey" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/purchase_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_org_grauly"
            android:gravity="center_vertical|center_horizontal"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/select_confirm"
                />

            <TextView
                android:id="@+id/tv_xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_select"

                android:text="">
            </TextView>
        </RelativeLayout>




    </LinearLayout>
    </ScrollView>


</LinearLayout>