<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_line"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="43px"
        android:text="2017-8-23"
        android:textSize="16sp"
        android:textColor="@color/home_text"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_corner"
        android:layout_marginLeft="46px"
        android:layout_marginRight="46px"
        android:layout_marginTop="43px"
        android:paddingLeft="46px"
        android:paddingTop="43px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal"
            android:paddingRight="30px"
            >


            <TextView
                android:id="@+id/notice_title"
                android:layout_below="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="题标题标题题标标哒哒标题标哒答题标题是你吗波的哒"
                android:textColor="@color/home_text2"
                android:textSize="16sp"
                />


        </com.zhy.autolayout.AutoRelativeLayout>



        <TextView
            android:id="@+id/notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"
            android:paddingRight="30px"
            android:text=""
            android:textColor="@color/tenderr_tex"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="46px"
            android:layout_marginTop="34px"
            android:background="@color/line_color" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:paddingRight="46px"
            android:paddingBottom="46px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/home_text"
                android:textSize="14sp"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/iv_productcontent_right"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>