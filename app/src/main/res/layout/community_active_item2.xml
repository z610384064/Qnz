<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_line"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="43px"
        android:text="2017-8-23"
        android:textSize="16sp"
        android:textColor="@color/home_text"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_corner"
        android:layout_marginLeft="46px"
        android:layout_marginRight="46px"
        android:layout_marginTop="43px"
        android:paddingLeft="46px"
        android:paddingTop="43px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="标题"
                android:textColor="@color/home_text2"
                android:textSize="16sp"
                />

        </com.zhy.autolayout.AutoRelativeLayout>



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28px"
            android:paddingRight="46px"
            android:paddingBottom="46px">


            <ImageView
                android:id="@+id/active_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="46px"
                />

            <TextView
                android:layout_marginTop="50px"
                android:layout_below="@+id/active_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textColor="@color/home_text"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_marginTop="50px"
                android:layout_below="@+id/active_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="46px"
                android:src="@drawable/iv_productcontent_right"/>
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
